[Unit]
Description={{ CHATOPS_REDIS_INSTANCE }} Redis persistent key-value database
After=network.target

[Service]
ExecStart=/usr/bin/redis-server /etc/{{ CHATOPS_REDIS_INSTANCE }}-redis.conf --daemonize no
ExecStop=/usr/bin/redis-shutdown {{ CHATOPS_REDIS_INSTANCE }}-redis
User=redis
Group=redis

[Install]
WantedBy=multi-user.target